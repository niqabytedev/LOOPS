//Example of do while loop
//By niqabytedev

#include <iostream>
using namespace std;
int main()
{
  short int number, i = 1;
	do {
		i = 1;
		cout << "bir sayi giriniz";
		cin >> number;
		if (number < 1 || number>50)
			break;
		while (i <= number) {
			cout << i << "\n";
			i++;
		}
		cout << "\n";
	} while (number >= 1 && number <= 50);
	return 0;
}
